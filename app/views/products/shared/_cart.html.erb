<a href="#cart-item" data-toggle="collapse" aria-expanded="false">
  <span>Mon panier</span>
  <i class="fas fa-shopping-cart align-middle" style="font-size:20px; vertical-align: middle;"></i>
</a>

<ul class="collapse" id="cart-item">
  <% list_items.each do |item| %>
    <li>
      <%= item.product.name %>
      <%= item.quantity %>
    </li>
  <% end %>
  <li>
    <%= link_to "Finaliser mon panier", account_orders_path(@account) %>
    <%= link_to "MARKET", market_account_products_path(@account) %>
  </li>

</ul>



