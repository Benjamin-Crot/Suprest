<h1>Mes produits</h1>

<% @products.each do |product| %>
  <%= link_to edit_product_path(product) do %>
    <div class="card-product">
      <%= cl_image_tag product.photo.key %>
      <div class="card-product-infos">
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
      </div>
    </div>
  <% end %>
<% end %>


