<div style="padding: 10px;">
  <div class="header">
    <h1>Se connecter</h1>
    <h3>Connectez-vous avec votre email et votre mot de passe Beno.</h3>
  </div>

  <div class="form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: "Email",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <div class="forget_password">
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
        </div>

        <div class="remember-me-container">
          <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
          <p>Rester connecté(e)</p>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn-submit" %>
      </div>
    <% end %>
    <div class="link_to_sign_in">
      <%= link_to "Vous n'avez pas encore de compte ?", new_registration_path(resource_name) %><br />
    </div>
  </div>
</div>
