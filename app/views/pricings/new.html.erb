<h2>Définir un prix</h2>

<div class="form">
  <%= simple_form_for [@product, @pricing] do |f| %>
    <%#= f.input :amount_cents, label: false, placeholder: "Prix", as: :numeric, input_html: { min: 0 } %>
    <%= f.input :min_quantity, label: "Entre", placeholder: 'Quantité minimum'%>
    <%= f.input :max_quantity, label: "et", placeholder: 'Quantité maximum'%>
    <%= f.number_field :amount_cents, value: number_to_currency(f.object.amount_cents.to_f, delimiter: '', unit: '€'), step: :any %>
    <%= f.button :submit, "Enregistrer", class: "btn-back btn-flat"%>
  <% end %>
</div>


